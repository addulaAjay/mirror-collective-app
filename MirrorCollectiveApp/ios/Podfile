require_relative '../node_modules/react-native/scripts/react_native_pods'

# Enable modular headers to allow Swift pods (FirebaseCoreInternal) to be imported when using static libraries

# Remove global modular headers to fix React Native module redefinition
# use_modular_headers!

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Enable static frameworks for Firebase support
use_frameworks! :linkage => :static

target 'MirrorCollectiveApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Firebase Pods
  pod 'Firebase/Core'
  pod 'FirebaseAppDistribution', '~> 11.11.0-beta'
  pod 'FirebaseCoreInternal'
  pod 'GoogleUtilities'
  pod 'PromisesObjC'
  pod 'FirebaseInstallations'
  pod 'FirebaseCore'
  pod 'GoogleAppMeasurement'

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # Fix non-modular include error for Firebase pods with use_frameworks! :linkage => :static
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['CLANG_WARN_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'NO'
      end
    end
  end
end
